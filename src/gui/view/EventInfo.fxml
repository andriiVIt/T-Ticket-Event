<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="383.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.EventInfoController">
   <children>
      <ImageView fitHeight="455.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/bg.jpg" />
         </image>
      </ImageView>
      <ListView fx:id="participantsList" layoutX="356.0" layoutY="71.0" prefHeight="254.0" prefWidth="200.0" />
      <HBox alignment="CENTER" layoutX="356.0" layoutY="325.0" prefHeight="53.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#getTicket" prefHeight="25.0" prefWidth="80.0" text="Get ticket">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#getCoupon" prefHeight="25.0" prefWidth="80.0" text="Get coupon">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Pane layoutX="73.0" layoutY="77.0" prefHeight="233.0" prefWidth="183.0" style="-fx-background-color: white;">
         <children>
            <VBox alignment="CENTER" layoutX="-1.0" prefHeight="233.0" prefWidth="183.0">
               <children>
                  <Label fx:id="eventNameLabel" text="Event name">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Label>
                  <Label fx:id="eventDateLabel" text="Event date">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="eventPlaceLabel" text="Event place">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="eventDescriptionLabel" text="Event description">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </Pane>
      <VBox alignment="CENTER" layoutX="266.0" layoutY="110.0" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button fx:id="addParticipant" mnemonicParsing="false" prefHeight="25.0" prefWidth="70.0" text="Add">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="removeParticipant" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="70.0" text="Remove">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <TextField fx:id="searchBox" layoutX="372.0" layoutY="26.0" prefHeight="25.0" prefWidth="102.0" promptText="search" />
      <ImageView fitHeight="25.0" fitWidth="19.0" layoutX="347.0" layoutY="29.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/search.png" />
         </image>
      </ImageView>
      <Button fx:id="closeButton" layoutX="73.0" layoutY="339.0" mnemonicParsing="false" onAction="#close" text="Close" />
   </children>
</AnchorPane>
