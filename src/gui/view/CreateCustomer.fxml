<AnchorPane fx:id="createCustomerAnchorPane" stylesheets="@styles/CreateCustomerStyles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.CreateCustomerController">
   <children>
      <VBox alignment="CENTER" layoutX="-2.0" layoutY="52.0" prefHeight="346.0" prefWidth="392.0">
         <children>
            <HBox alignment="CENTER" prefHeight="49.0" prefWidth="396.0">
