                        <Insets left="5.0" />
                     </HBox.margin>
                  </MFXTextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="53.0" prefWidth="396.0">
               <children>
                  <ImageView fitHeight="65.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/email.png" />
                     </image>
                  </ImageView>
                  <MFXTextField fx:id="emailField" styleClass="mfxTextField" promptText="Enter Coupon Name" text="Enter email">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </MFXTextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" />
         </children>
      </VBox>
      <Button layoutX="230.0" layoutY="410.0" mnemonicParsing="false" onAction="#createParticipant" styleClass="button" text="Create" />
