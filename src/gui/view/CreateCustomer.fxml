                  <ImageView fitHeight="65.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/participants_icon.png" />
                     </image>
                  </ImageView>
                  <MFXTextField fx:id="nameField" styleClass="mfxTextField" promptText="Enter Coupon Name" text="Enter name">
